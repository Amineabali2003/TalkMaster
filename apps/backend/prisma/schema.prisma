generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  role     Role
  talks    Talk[]   @relation("UserTalks")
}

model Talk {
  id          String     @id @default(cuid())
  title       String
  subject     String
  description String
  duration    Int
  level       String
  status      TalkStatus @default(PENDING)
  speaker     User       @relation("UserTalks", fields: [speakerId], references: [id])
  speakerId   String
  room        String?
  startTime   DateTime?
}

enum Role {
  SPEAKER
  ORGANIZER
}

enum TalkStatus {
  PENDING
  ACCEPTED
  REJECTED
  SCHEDULED
}